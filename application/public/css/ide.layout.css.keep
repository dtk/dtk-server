/*---Panel Stylings------------*/
/*---------------------------------*/
.panel {
	position: relative;
	background-color: #FFFFFF;
	float: left;
}

#l-panel {
	background-color: green;
}

#main-panel {
	min-width: 100px;
	width: 300px;
	height: 100%;
	width: 100%;
	position: relative;
	background-color: blue;
	float: left;
}
#main-panel-header {
	position: relative;
	float: left;
	background-color: #CCCCCC;
}
#main-panel-content {
	position: relative;
	min-width: 100px;
	width: 300px;
	height: 90%;
	width: 100%;
	float: left;
	background-color: green;
}


.v-panel-spacer {
	height: 100%;
	width: 3px;
	background-color: #CCCCCC;
	position: relative;
	float: left;
	cursor: w-resize;
}
.h-panel-spacer {
	height: 3px;
	width: 100%;
	background-color: #CCCCCC;
	position: relative;
	float: left;
	cursor: n-resize;
}

.editor-panel {
	height: 300px;
	width: inherit;
	background-color: #FFFFFF;
	position: relative;
	float: left;
}
.console-panel {
	height: 100px;
	width: inherit;

}


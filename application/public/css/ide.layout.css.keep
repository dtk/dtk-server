/*------Left Panel--------------------------*/

.l-panel-tab-wrapper {
	position: relative;
	width: 100%;
	height: 25px;
	min-width: 150px;
	background-color: #E4E4E4;
}

.l-panel-tab-list {
	position: relative;
	width: 100%;
	height: 25px;
	min-width: 150px;
	
	overflow-x: hidden;
}
.l-panel-tab-list li {
	list-style: none outside;
	height: 25px;
	padding: 5px 5px 0 5px;
	position: relative;
	float: left;
}
.l-panel-tab-list li.active {
	border-top: 1px solid #343434;
	border-left: 1px solid #343434;
	border-right: 1px solid #343434;
	-moz-border-radius-topleft: 3px;
	-moz-border-radius-topright: 3px;
}

.project-view-content {
	margin: 5px;
	width: 100%;
	height: 100%;
	overflow: auto;
}

.project-item {
	height: 25px;
	margin: 5px;
	cursor: pointer;
}
.project-icon {
	height: 20px;
	width: 20px;
	margin: 1px 0 0 3px;
	background-repeat: no-repeat;
	float: left;
}
.project-item	.project-icon {
	background-image: url(../images/ide/project-folder.png);
}
.project-item.open	.project-icon {
	background-image: url(../images/ide/project-folder-open.png);
}

.project-label {
	float: left;
	font-size: 13px;
}
/*------------Form related-----------------*/


.edit-form {
	position: relative;
	float: left;
	width: 300px;
	margin: 10px;
}

table.edit {
	border: 0;
}
td.label {
	font-size: 15px;
/*	width: 35%;*/
	padding: 3px;
}
td.field {
	padding: 3px 3px 7px 3px;
}
td.field input[type=text] {
	border: 1px solid #CCCCCC;
	height:1.6em;
/*	line-height:1.1em;*/
/*	margin:0 0 -0.8em;*/
/*	padding:0.2em 0.64em 0 0.44em;*/
	width:20em;
	font-size: 14px;
	float:left;
}
td.field input[type=text]:focus {
	border: 2px solid #AEB9CD;
}

.group-header {
	font-size: 16px;
	font-weight: bold;
	position: relative;
	float: left;
	height: 20px;
}
.add-btn {
	background-image: url(../images/plus-button2.png);
	height: 16px;
	width: 16px;
	margin-left: 10px;
	cursor: pointer;
	position: relative;
	float: left;
}

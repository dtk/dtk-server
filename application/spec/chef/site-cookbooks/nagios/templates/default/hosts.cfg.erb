# Generated by Chef
# host definitions

<% @host_info_list.each do |h| -%>
define host {
  address <%= h[:host_address]||"unreachable" %>
  host_name <%= h[:name] %>
<% if h[:alias] -%>
  alias <%= h[:alias] %>
<% end -%>
<% if h[:op_state] == "node_deleted" -%>
  use server_deleted_node
  hostgroups deleted_node
<% elsif h[:op_state] == "stopped" -%>
  use server_not_active
  hostgroups not_active
<% elsif h[:host_address].nil? -%>
  use server_active_not_reachable
  hostgroups active_not_reachable
<% else -%>
  use server_active
  hostgroups active
<% end -%>
}
<% end -%>

<div class="edit_container">
	<form id="attribute-edit-form" action="../save_attributes/" method="post" enctype="multipart/form-data">
	<input type="submit" value="Save"/>
		<input type="hidden" name="model" id="model" value="node" />
		<input type="hidden" name="id" id="id" value="{%=id%}" />
		<input type="hidden" name="action" id="action" value="save" />
	<table class="edit">
           {%for attribute in attribute_list%}
		<tr id="">
				<td id="" class="label">{{%=attribute[:name]%}}</td>
				<td id="" class="field"><input type="text"  id="{%=attribute[:attr_id]%}" name="{%=attribute[:attr_id]%}" class="r8-text" value="{%=attribute[:attribute_value]%}" size="40" /></td>
		</tr>
        {%end%}
	</table>
	</form>
</div>

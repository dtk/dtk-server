<div class="edit_container">
	<form id="attribute-edit-form" action="../save_attributes/" method="post" enctype="multipart/form-data">
	<input type="submit" value="Save"/>
		<input type="hidden" name="model" id="model" value="component" />
		<input type="hidden" name="component_id" id="component_id" value="{%=component_id%}" />
	<table class="edit">
           {%for attribute in attribute_list%}
		<tr id="">
				<td id="" class="label">{{%=attribute[:attribute_name]%}}</td>
				<td id="" class="field"><input type="text"  id="{%=attribute[:attribute_id]%}" name="{%=attribute[:attribute_id]%}" class="r8-text" value="{%=attribute[:attribute_value]%}" size="40" /></td>
		</tr>
        {%end%}
	</table>
	</form>
</div>

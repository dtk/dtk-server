<html>
<head>
<title>Example Layout</title>

<link rel="stylesheet" type="text/css" href="{%=_app[:base_css_uri]%}/default.layout.css" />

{%for css_include in _app[:css_includes]%}
	<link rel="stylesheet" type="text/css" href="{%=css_include%}" />
{%end%}
</head>

<body>
<div id="page_container">

	<div id="menu_container">
		<ul>
			<li class="selected"><a href="{%=_app[:base_uri]%}/xyz/home">Home</a></li>
			<li class=""><a href="{%=_app[:base_uri]%}/xyz/workspace">Workspace</a></li>
			<li class=""><a href="{%=_app[:base_uri]%}/xyz/datacenter/list">Datacenters</a></li>
			<li class=""><a href="{%=_app[:base_uri]%}/xyz/node/list">Nodes</a></li>
			<li class=""><a href="{%=_app[:base_uri]%}/xyz/component/list">Components</a></li>
			<li class=""><a href="{%=_app[:base_uri]%}/xyz/attribute/list">Attributes</a></li>
			<li class=""><a href="{%=_app[:base_uri]%}/xyz/node_group/list">Groups</a></li>
		</ul>
	</div>

	<div id="main_body">
		{%=main_body%}
	</div>

</div>

<div id="js_include_container">
<script type="text/javascript" src="{%=_app[:base_js_uri]%}/example.js"></script>

	{%for js_include in _app[:js_includes]%}
		<script type="text/javascript" src="{%=js_include%}"></script>
	{%end%}
</div>
</body>
</html>

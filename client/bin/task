#!/usr/bin/env ruby
$: << "/usr/lib/ruby/1.8/" #TODO: put in to get around path problem in rvm 1.9.2 environment
require File.expand_path('../r8_client', File.dirname(__FILE__))
include R8::Client
load_command("task")


subcommand = ARGV[0]

args = Array.new

conn = Conn.new()

hash_response = conn.task.apply(subcommand,*args)
pp hash_response.render_data("hash_pretty_print")

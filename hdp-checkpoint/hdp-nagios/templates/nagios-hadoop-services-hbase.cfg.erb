
# HBASE Checks
define service {
        hostgroup_name          hbasemaster
        use                     generic-service
        service_description     HBASEMASTER::HBaseMaster CPU utilization alert
        check_command           check_snmp_load!200%!250%
        normal_check_interval   5
        retry_check_interval    2 
        max_check_attempts      5
}

define service {
        hostgroup_name          hbasemaster
        use                     generic-service
        service_description     HBASEMASTER::HBaseMaster Memory and Swap utilization alert
        check_command           check_snmp_mem!99%,20%!100%,50%
        normal_check_interval   5
        retry_check_interval    2 
        max_check_attempts      5
}

define service {
        hostgroup_name          hbasemaster
        use                     generic-service
        service_description     HBASEMASTER::HBaseMaster Process down alert
        check_command           check_tcp!60000!-w 1 -c 1
        normal_check_interval   1
        retry_check_interval    1 
        max_check_attempts      5
}

